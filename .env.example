# ====================================
# Environment Configuration Template
# ====================================
# Copy this file to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
PORT=8000
DEBUG=false

# API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
MARKET_DATA_API_KEY=your_market_data_api_key_here
MARKET_DATA_PROVIDER=polygon  # Options: polygon, alpaca, ibkr

# Market Data API Keys
POLYGON_API_KEY=your_polygon_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/options_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# ML Models Configuration
MODEL_PATH=./models
RETRAIN_INTERVAL_HOURS=24
MODEL_VERSION=v1.0.0

# Trading Parameters
MAX_POSITION_SIZE=0.05  # 5% of portfolio
CONFIDENCE_THRESHOLD=0.7
MIN_LIQUIDITY=1000  # Minimum option volume
MIN_SPREAD_PERCENT=0.05  # Maximum 5% bid-ask spread

# Risk Management
MAX_LOSS_PER_TRADE=0.02  # 2% max loss per trade
MAX_DAILY_TRADES=10
MAX_PORTFOLIO_RISK=0.10  # 10% max portfolio risk

# Claude API Configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=1024
CLAUDE_TEMPERATURE=0.7
CLAUDE_TIMEOUT=30

# Market Data Settings
FETCH_INTERVAL=60  # Data fetch interval in seconds
DATA_FETCH_INTERVAL_SECONDS=60
MARKET_HOURS_START=09:30
MARKET_HOURS_END=16:00
TIMEZONE=America/New_York

# Feature Engineering
TECHNICAL_INDICATORS=RSI,MACD,BB,ATR,VWAP
LOOKBACK_PERIODS=5,10,20,50,200

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=spy-options-intelligence

# Monitoring and Alerts
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
ALERT_EMAIL=
ALERT_SLACK_WEBHOOK=

# Security
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Performance
WORKER_COUNT=4
MAX_REQUESTS_PER_MINUTE=60
CACHE_TTL_SECONDS=300

# Backtesting
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=100000

# Paths
DATA_PATH=./data
LOG_PATH=./logs
LPI_FILE=./state/last_processed_index.json

# Logging
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30
